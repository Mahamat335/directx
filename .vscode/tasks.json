{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "App.cpp",
                "FeatureException.cpp",
                "FeatureTimer.cpp",
                "Keyboard.cpp",
                "Mouse.cpp",
                "Window.cpp",
                "WinMain.cpp",
                "-I",
                "${workspaceFolder}/Header Files",
                "-o",
                "${workspaceFolder}/app.exe",
                "-fuse-ld=lld",
                "-luser32",
                // MSVC include path (excpt.h burada)
                "-isystem",
                "C:/Program Files/Microsoft Visual Studio/2022/BuildTools/VC/Tools/MSVC/14.40.33807/include",
                // Windows SDK include paths
                "-isystem",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/ucrt",
                "-isystem",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/um",
                "-isystem",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/shared",
                "-isystem",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/winrt",
                "-isystem",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/cppwinrt",
                // Windows SDK lib paths
                "-L",
                "C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/ucrt/x64",
                "-L",
                "C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/um/x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}